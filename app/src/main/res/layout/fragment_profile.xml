<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.app.liverooms.user.ProfileFragment.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_back"
        tools:context=".user.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/abold"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/btnSetting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:src="@drawable/settings"
                    app:tint="@color/white" />


            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.isLoading?View.GONE : View.VISIBLE}"
                            tools:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:orientation="horizontal">

                                <com.app.liverooms.utils.UserProfileImageView
                                    android:id="@+id/imgUser"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/abold"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/tvUserName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/alight"
                                        android:gravity="center"
                                        android:text="@string/id"
                                        android:textColor="@color/common_google_signin_btn_text_dark"
                                        android:textSize="14sp" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvLevel"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_5dp"
                                            android:backgroundTint="@color/pink"
                                            android:paddingHorizontal="7dp"
                                            android:paddingVertical="1dp"
                                            android:text="@string/lv_1"
                                            android:textColor="@color/white" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:background="@drawable/bg_5dp"
                                            android:backgroundTint="@color/purple"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:id="@+id/imgGender"
                                                android:layout_width="17dp"
                                                android:layout_height="17dp"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="3dp"
                                                android:padding="2dp"
                                                android:src="@drawable/female"
                                                app:tint="@color/white" />

                                            <TextView
                                                android:id="@+id/tvAge"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingHorizontal="7dp"
                                                android:paddingVertical="1dp"

                                                android:text="21"
                                                android:textColor="@color/white" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/btnEditProfile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_stok_round"
                                    android:gravity="center"
                                    android:paddingHorizontal="13dp"
                                    android:paddingVertical="3dp"
                                    android:text="Edit"
                                    android:textColor="@color/text_gray" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/bg_10dp_stockgray"
                                android:orientation="horizontal"
                                android:paddingVertical="15dp">

                                <LinearLayout
                                    android:id="@+id/lytFollowrs"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvFollowrs"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/amidum"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/alight"
                                        android:text="Fans"
                                        android:textColor="@color/text_gray"
                                        android:textSize="12dp" />

                                </LinearLayout>

                                <View
                                    android:layout_width=".3dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/text_gray" />

                                <LinearLayout
                                    android:id="@+id/lytFollowing"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvFollowing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/amidum"
                                        android:text=""
                                        android:textColor="@color/white"
                                        android:textSize="16dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/alight"
                                        android:text="Following"
                                        android:textColor="@color/text_gray"
                                        android:textSize="12dp" />

                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>

                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/shimmer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="@{viewModel.isLoading?View.VISIBLE : View.GONE}"
                            app:shimmer_base_color="@color/shimmarColor"
                            app:shimmer_colored="false"
                            app:shimmer_highlight_color="@color/white"
                            tools:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <include layout="@layout/shimmer_profile" />

                                </LinearLayout>


                            </LinearLayout>
                        </com.facebook.shimmer.ShimmerFrameLayout>

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lytWallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="#33F77D3E"
                                android:padding="9dp"
                                android:src="@drawable/wallet"
                                app:tint="#F77D3E" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/amidum"
                                android:text="My Wallet"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_round_keyboard_arrow_right_24"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".3dp"
                            android:layout_marginVertical="10dp"
                            android:background="@color/text_gray" />

                        <LinearLayout
                            android:id="@+id/lytMyPost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="#33E7166B"
                                android:padding="9dp"
                                android:src="@drawable/post"
                                app:tint="#E7166B" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/amidum"
                                android:text="My Posts"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_round_keyboard_arrow_right_24"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".3dp"
                            android:layout_marginVertical="10dp"
                            android:background="@color/text_gray" />

                        <LinearLayout
                            android:id="@+id/lytMyVideos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="#33B819A9"
                                android:padding="9dp"
                                android:src="@drawable/videocamara"
                                app:tint="#B819A9" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/amidum"
                                android:text="My Relites"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_round_keyboard_arrow_right_24"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".3dp"
                            android:layout_marginVertical="10dp"
                            android:background="@color/text_gray" />

                        <LinearLayout
                            android:id="@+id/lytFreeDimonds"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="#33821CED"
                                android:padding="9dp"
                                android:src="@drawable/diamond"
                                app:tint="#821CED" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/amidum"
                                android:text="Free Diamond"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_round_keyboard_arrow_right_24"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".3dp"
                            android:layout_marginVertical="10dp"
                            android:background="@color/text_gray"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/lytVIP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="#331DC194"
                                android:padding="9dp"
                                android:src="@drawable/crown"
                                app:tint="#1DC194" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/amidum"
                                android:text="Become VIP"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_round_keyboard_arrow_right_24"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".3dp"
                            android:layout_marginVertical="10dp"
                            android:background="@color/text_gray" />

                        <LinearLayout

                            android:id="@+id/lytSupport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="#33F15A4E"
                                android:padding="9dp"
                                android:src="@drawable/support"
                                app:tint="#F15A4E" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/amidum"
                                android:text="Have an Issue"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_round_keyboard_arrow_right_24"
                                app:tint="@color/white" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height=".3dp"
                            android:layout_marginVertical="10dp"
                            android:background="@color/text_gray" />

                        <LinearLayout

                            android:id="@+id/lytComplains"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="#33FEAD2A"
                                android:padding="9dp"
                                android:src="@drawable/customer_satisfaction"
                                app:tint="#FEAD2A" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/amidum"
                                android:text="My Complains"
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="20dp"
                                android:src="@drawable/ic_round_keyboard_arrow_right_24"
                                app:tint="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!--
                                    <LinearLayout
                                        android:layout_marginVertical="5dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="20dp"
                                        android:layout_marginBottom="20dp"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="35dp"
                                            android:background="@drawable/bg_5dp"
                                            android:backgroundTint="#0F1B2F"
                                            android:padding="9dp"
                                            android:src="@drawable/profile"
                                            app:tint="#007AFF" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="20dp"
                                            android:layout_weight="1"
                                            android:fontFamily="@font/amidum"
                                            android:text="Log Out"
                                            android:textColor="@color/white"
                                            android:textSize="14dp" />

                                    </LinearLayout>
                    -->

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </RelativeLayout>
</layout>